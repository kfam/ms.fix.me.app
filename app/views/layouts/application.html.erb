<!DOCTYPE html>
<html>
	<head>
		<title>MsFixMeApp</title>
		<%= stylesheet_link_tag    "application", :media => "all" %>
		<%= javascript_include_tag "application" %>
		<%= csrf_meta_tags %>
	</head>
	<body>
		<div id="user">
			<% if current_administration_user %>
				<%= link_to "Admin", administration_path %>
				<% else %>
				<%= link_to 'Login', administration_path %>
			<% end %>	
		</div>
		<div id='content'>
			<div id='header'>
				<div id='title'>
					<%= link_to 'Amozan.com', '/' %>
				</div>
				<div id='navigation'>
					<% parent = @category ? (@category.parent ? @category.parent : @category) : nil %>				
					<ul>
						<% if @product %>
							<% @product.categories.published.each do |category| %>
								<% next if category.parent %>
								<% klass = parent == category ? 'current' : '' %>
								<%= content_tag(:li, link_to(category.name, category, :class => klass)) %>
							<% end %>
						<% elsif @category %>
								<%= content_tag(:li, link_to(@category.name, @category, :class => 'current')) unless @category.parent %>
						<% else %>
							<% @root_categories.each do |category| %>
								<% klass = parent == category ? 'current' : '' %>
								<%= content_tag(:li, link_to(category.name, category, :class => klass)) %>
							<% end %>
						<% end %>	
					</ul>
					<% if parent %>
						<ul>
							<% parent.children.published.each do |child| %>
								<% klass = @category == child ? 'current' : '' %>
								<%= content_tag(:li, link_to(child.name, child, :class => klass)) %>
							<% end %>
						</ul>
					<% elsif @product %>
						<ul>
							<% @product.categories.published.each do |category| %>
								<% next unless category.parent %>
								<%= content_tag(:li, link_to(category.name, category, :class => '')) %>
							<% end %>
						</ul>
					<% end %>
					
				</div>
			</div>

			<div id='main-body'>
				<%= yield %>
			</div>
		</div>
	</body>
</html>
